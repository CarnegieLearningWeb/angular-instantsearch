{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "angular-instantsearch",
  "projectType": "library",
  "sourceRoot": "projects/angular-instantsearch/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "projects/angular-instantsearch/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "projects/angular-instantsearch/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/angular-instantsearch/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{workspaceRoot}/dist/angular-instantsearch"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/projects/angular-instantsearch"],
      "options": {
        "jestConfig": "projects/angular-instantsearch/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "projects/angular-instantsearch/**/*.ts",
          "projects/angular-instantsearch/**/*.html"
        ]
      }
    }
  }
}
